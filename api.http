# CURL Comamnds
# Get All Prompts
curl -X GET 192.168.0.22:31000/api/prompts \
-H "Content-Type: application/json"

# Get Prompt by ID
curl -X GET 192.168.0.22:31000/api/prompts/1 \
-H "Content-Type: application/json"

# Create Prompt
curl -X POST 192.168.0.22:31000/api/prompts \
-H "Content-Type: application/json" \
-d '{
  "promptNumber": "TEST102",
  "prompt": "This is a test prompt."
}'

# Update Prompt
curl -X PUT 192.168.0.22:31000/api/prompts/1 \
-H "Content-Type: application/json" \
-d '{
  "promptNumber": "TEST101",
  "prompt": "This is a test prompt - updated."
}'

# Delete Prompt
curl -X DELETE 192.168.0.22:31000/api/prompts/1 \
-H "Content-Type: application/json"